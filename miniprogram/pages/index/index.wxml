

<scroll-view scroll-y="true" style="height:{{scrollH}}px" bindscrolltolower="loadImages">
<view class="swiper-container">
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{duration}}" current="{{swiperCurrent}}" bindchange="swiperChange" class="swiper">
    <block wx:for="{{imgUrls}}" wx:key="unique">
      <swiper-item>
        <image src="{{item}}" class="img" bindtap="swipclick" />
      </swiper-item>
    </block>
  </swiper>
</view>

  <view class="goods" style="width:100%;margin-top:5px;">
    <view class="img_item">
      <view wx:for="{{col1}}" wx:key="id" class='item_box'> 
      <navigator url='../goods/goods?id={{item.id}}'>
      <view class="item_info">
        <image src="{{item.imageurl}}" style="width:100%;height:{{item.height}}px"></image>
      </view>
            <view class="product-name">
              {{item.name}}
            </view>
            <view class="product-price-wrap">
              <p class="product-price-new">￥{{item.newprice}}</p>  
              <p class="product-price-old">￥{{item.oldprice}}</p> 
               <p class="discount">{{item.discount}}折</p>   
            </view>
            </navigator>
      </view>
    </view>
    <view class="img_item">
      <view wx:for="{{col2}}" wx:key="id" class='item_box'>
      <navigator url='../goods/goods?id={{item.id}}'>
      <view class="item_info" bindtap="goods_item" data-id='{{item.id}}'>
        <image src="{{item.imageurl}}" style="width:100%;height:{{item.height}}px"></image>
      </view>
            <view class="product-name">
            <navigator url="../menu/menu"> {{item.name}}</navigator>
            </view>
            <view class="product-price-wrap">
              <p class="product-price-new">￥{{item.newprice}}</p>  
              <p class="product-price-old">￥{{item.oldprice}}</p> 
               <p class="discount">{{item.discount}}折</p>   
            </view>
            </navigator>
      </view>
    </view>
  </view>
</scroll-view>
 <view style="display:block">
  <image wx:for="{{images}}" wx:key="id" id="{{item.id}}" src="{{item.imageurl}}" bindload="onImageLoad"></image>
</view>