page{  
  height: 100%;  
  background-color: #F3F4F6;
} 

/* 单个图片容器的样式 */
.img_item {
  width: 100%;
  margin: 2px;
  display: inline-block;
  vertical-align: top;
  font-size: 24rpx;
}
.item_info{
  border-top:0px dashed red;
  background-color: #ffffff;
  display: block;
  width: 30%;
  justify-content: center;
}

.item_info_right {
  background-color: #ffffff;
  display: block;
  padding-top: 10px;
}

.item_box {
  margin-top:4px; 
  background-color: #ffffff;
  height: 20%;
}
.product-name{
  color: #000;
  /* height: 28px; */
  text-align:left;
   margin: 0px 5px; 
   margin-bottom: 5px; 
   font-size: 16px；
}
.product-price-wrap .product-price-new{
  color: #e80080;
  margin-left:5px;
  font-weight:900;
  font-size: 16px;
}
.product-price-wrap .product-price-old{
  color: #888;
  text-decoration: line-through;
  padding-left: 2px;
  font-size: 16px;
}
.product-price-wrap{
  margin-left: 5px;
  color: #fff;
  font-size: 16px;
}
.discount{
  float: right;
  background-color: #000;
  color: #fff;
  font-size: 16px;
}